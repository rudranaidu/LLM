import openai

# Set your OpenAI API key
openai.api_key = 'your-api-key'

# Function to make a simple API call and get the response
def get_openai_response(prompt):
    response = openai.Completion.create(
        engine="text-davinci-003",  # You can choose other engines
        prompt=prompt,
        max_tokens=100,
        temperature=0.5  # Controls creativity of the response
    )
    # Access the first choice and strip the result of extra spaces
    return response.choices[0].text.strip()

# Example prompt
prompt = "Explain the benefits of using solar energy."
print(get_openai_response(prompt))
